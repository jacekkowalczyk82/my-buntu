prompt 0

MENU HIDDEN
MENU AUTOBOOT Booting my-buntu live disk in # seconds
timeout 50

label live-@FLAVOUR@
	menu label ^Try or install my-buntu
	menu default
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@

label check
	menu label ^Check disk for defects
	linux /casper/vmlinuz
	append boot=casper integrity-check initrd=/casper/initrd.lz quiet splash --

label hd
	menu label ^Boot from first hard disk
	localboot 0x80
